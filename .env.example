# ============================================================================
# VIDENSBANK FLASK APPLICATION - Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# ============================================================================
# Flask Configuration
# ============================================================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-very-secure-secret-key-change-this-in-production

# Flask environment: development, production, staging
FLASK_ENV=development
FLASK_DEBUG=True

# ============================================================================
# Database Configuration
# ============================================================================
# Local development (SQLite)
DATABASE_URL=sqlite:///vidensbank.db

# Production (PostgreSQL - Heroku format)
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# ============================================================================
# Application Settings
# ============================================================================
# Application name
APP_NAME=Vidensbank

# Base URL for the application (used in emails, etc.)
BASE_URL=http://localhost:5000

# Admin email for notifications
ADMIN_EMAIL=admin@example.com

# ============================================================================
# Security Settings
# ============================================================================
# Session configuration
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# CSRF protection
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=None

# ============================================================================
# Email Configuration (Optional - for contact forms, notifications)
# ============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=noreply@vidensbank.dk

# ============================================================================
# File Upload Configuration
# ============================================================================
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
UPLOAD_FOLDER=static/uploads
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf

# ============================================================================
# Rate Limiting (Optional)
# ============================================================================
RATELIMIT_ENABLED=True
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per hour

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_STDOUT=True

# ============================================================================
# External API Keys (if needed)
# ============================================================================
# Add any third-party API keys here
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
# RECAPTCHA_SITE_KEY=your-site-key
# RECAPTCHA_SECRET_KEY=your-secret-key

# ============================================================================
# Production-Specific Settings
# ============================================================================
# Uncomment and set these for production deployment

# Force HTTPS
# PREFERRED_URL_SCHEME=https

# Disable debug mode
# FLASK_DEBUG=False
# FLASK_ENV=production

# Use strong secret key
# SECRET_KEY=<generate-with-secrets-token-hex>

# Enable secure cookies
# SESSION_COOKIE_SECURE=True
